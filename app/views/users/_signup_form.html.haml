=simple_form_for @user, :html => { :class => 'form-horizontal' } do |f|
  %fieldset
    %legend Sign up
    =f.input :email, :label => 'E-mail address'
    =f.input :name, :label => 'Name and surname'
    =f.input :password
    =f.input :password_confirmation, :label => 'Repeat password'
    -if signup_page
      %div.form-actions
        =f.submit :class => 'btn btn-primary', :value => 'Sign up'
    -else
      %div.control-block
        %div.controls
          =f.submit :class => 'btn', :value => 'Sign up'
        
