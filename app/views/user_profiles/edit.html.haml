- provide :title, t('custom_translations.profile', :default => 'profile').capitalize

= render "shared/user_navigation"

.span8.offset2
  = simple_form_for @user_profile, :url => url_for(:controller => "user_profiles", :action => "update"), :multipart => true, :html => { :class => "form-horizontal" } do |f|
    = f.input :club, :label => "Club name"
    = f.input :link, :placeholder => "#{request.protocol}#{request.host_with_port}/LinkName"
    .control-group
      %label.control-label.negative-top-big Current profile link
      .controls.negative-top-medium
        - if @user_profile.link.present?
          = link_to user_profile_url(@user_profile.link_was), user_profile_url(@user_profile.link_was)
        - else
          Currently your profile is not public.
    = f.input :description
    = f.input :contact, :label => "Contact information", :rows => 3
    .control-group
      = f.label :avatar
      .controls
        .thumbnail.medium= image_tag current_user.profile.avatar.url(:medium)
        %div
          = f.file_field :avatar
    .form-actions
      = f.button :submit, t("custom_translation.update", :default => "update").capitalize
