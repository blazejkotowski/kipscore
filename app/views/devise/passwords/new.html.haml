- provide :title, "Forgot your password?"

.span8.offset2
  = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal' }) do |f|
    %fieldset  
      %label Forgot your password?
      = f.input :email, :required => true
      .form-actions
        = f.button :submit, "Send me reset password instructions", :class => 'btn'

  = render "devise/shared/links"
