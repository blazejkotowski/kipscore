- provide :title, I18n.t("custom_translations.sign in", :default => "sign in").capitalize

#signup-form.span8.offset2
  = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :class => 'form-horizontal' }) do |f|
    %fieldset
      %legend= I18n.t("custom_translations.sign in", :default => "sign in").capitalize
      = f.input :email, :required => false, :required => true, :autofocus => true, :label => "E-mail"
      = f.input :password, :required => false, :label => I18n.t('custom_translations.password', :default =>'password').capitalize, :required => true
      = f.input :remember_me, :as => :boolean, :label => t("custom_translations.remember me", :default => "remember me").capitalize if devise_mapping.rememberable?

      .form-actions
        = f.button :submit, I18n.t("custom_translations.sign in", :default => "sign in").capitalize
  
  = render "devise/shared/links"
