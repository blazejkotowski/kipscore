#tournament-players
  .span5
    %table#players-table.table.table-condensed
      %thead
        %tr
          %th Player
          %th Rank
          %th Action
        %tr
          = form_tag add_player_tournament_path(@tournament), :method => 'put', :id => 'add-player', :remote => true do
            %th
              = text_field_tag "player[name]"
            %th
              = text_field_tag "player[rank]", '', :class => 'rank'
            %th
              = submit_tag '+', :class => 'btn btn-success btn-medium'
      %tbody
        
        - unless @tournament.players.empty?
          - @tournament.players.each do |player|
            %tr
              %td= player.name
              %td= player.rank
              %td
