    %th
    %th
    %th

  - @tournaments.each do |tournament|
    %tr
      %td= tournament.user_id
      %td= tournament.name
      %td= tournament.start_date
      %td= tournament.active
      %td= link_to 'Show', tournament
      %td= link_to 'Edit', edit_tournament_path(tournament)
