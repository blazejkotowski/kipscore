= simple_form_for @tournament, :html => { :class => 'form-horizontal' } do |f|
  = f.input :user_id
  = f.input :name
  = f.input :start_date
  = f.input :active
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), tournament_path, :class => 'btn'
